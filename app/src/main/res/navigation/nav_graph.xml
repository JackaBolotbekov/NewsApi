<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_everything">

    <fragment
        android:id="@+id/navigation_everything"
        android:name="com.example.bottomnavigationapi.ui.fragments.everything.EverythingFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_everything" />

    <fragment
        android:id="@+id/navigation_top_headlines"
        android:name="com.example.bottomnavigationapi.ui.fragments.topheadlines.TopHeadlinesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_top_headlines" />

    <fragment
        android:id="@+id/navigation_sources"
        android:name="com.example.bottomnavigationapi.ui.fragments.sources.SourcesFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_sources" />
</navigation>